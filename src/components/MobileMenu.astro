---
import SVGClose from "../partials/svgs/close.astro";
import SVGLinkedIn from "../partials/svgs/linkedin.astro";
import SVGTwitter from "../partials/svgs/twitter.astro";
import SVGInstagram from "../partials/svgs/instagram.astro";
---

<div id="mobile_menu" class="menu">
  <div class="menu-wrapper">
    <div class="menu-outer-layout-grid">
      <div class="menu-nav-wrapper">
        <a id="close_menu_btn" class="close-btn" href="#">
          <div class="icon">
            <SVGClose />
          </div>
          close
        </a>
      </div>
      <div class="links-wrapper">
        <nav>
          <ul>
            <li><a href="#">Home</a></li>
            <li><a href="#">My Expertise</a></li>
            <li><a href="#">My Experience</a></li>
            <li><a href="#">My Experiments</a></li>
            <li><a href="#">About Me</a></li>
          </ul>
        </nav>
      </div>
      <div class="btns-wrapper">
        <div class="btn-wrapper">
          <a id="panel-menu-btn" class="menu-btn btn" href="#">My Resume</a>
        </div>
        <div class="social-btns">
          <div class="btn-wrapper">
            <div class="btn-layout-grid">
              <a href="#" class="btn">
                <div class="icon">
                  <SVGLinkedIn />
                </div>
              </a>

              <a href="#" class="btn">
                <div class="icon">
                  <SVGTwitter />
                </div>
              </a>

              <a href="#" class="btn">
                <div class="icon">
                  <SVGInstagram />
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .menu {
    position: absolute;
    top: 0;
    width: 85%;
    z-index: 1;
    height: 100vh;
    transform: translate(110%, 0);
    right: 0;
    background-color: color-mix(
      in srgb,
      var(--color-primary-darkest),
      #000 20%
    );
    box-shadow: rgb(0, 0, 0, 0.6) -10px 0px 15px;
    transition: 0.3s ease-in;

    &.js--is-active {
      transform: translate(0, 0);
      transition: 0.3s ease-in;
    }
  }

  .menu-outer-layout-grid {
    display: grid;
    grid-template-rows: 100px 2fr 1fr;
    height: 90%;
    /* background-color: aliceblue; */
  }

  a {
    color: color-mix(in srgb, var(--color-accent), #fff 80%);
  }

  .menu-btn .btn {
    font-size: 1rem;
  }

  .btn-wrapper {
    text-align: center;
    margin-bottom: 1em;
  }

  ul {
    padding-bottom: 1em;
  }

  li {
    list-style: none;
    padding: 1em 0;
  }

  .menu-wrapper {
    padding: 2rem;
    height: 100%;
  }

  .close-btn {
    display: flex;
    gap: 0.4rem;
    align-items: center;
    color: var(--color-accent);
  }

  .btns-wrapper {
    justify-self: center;
    align-self: end;
  }

  .btns-wrapper .btn {
    border: none;
  }

  .social-btns .btn {
    border-radius: 1rem;
    padding: 0.7rem;
  }
</style>
