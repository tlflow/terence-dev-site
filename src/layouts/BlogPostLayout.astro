---
const { sectionName, postDate } = Astro.props;
---

<main>
  <article class="article">
    <div class="outer-layout-grid">
      <header class="page-header">
        <div class="container">
          <div class="header-wrapper">
            <div class="section-title">{sectionName}</div>
            <slot name="blog-header" />
            <div class="blog-meta">
              <div class="author">by Terence Flowers</div>
              <div class="date">{postDate}</div>
            </div>
          </div>
        </div>
      </header>

      <div class="content">
        <div class="container">
          <slot />
          <div class="tags">
            <slot name="blog-tags" />
          </div>
        </div>
      </div>

      <footer class="article-footer">
        <div class="container">
          <div class="wrapper">
            <a href="#">contact</a>
            <a href="#">share</a>
          </div>
        </div>
      </footer>
    </div>
  </article>
</main>

<style>
  .page-header,
  .content {
    width: 100%;

    @container article (width >= 1024px) {
      width: 65ch;
      margin: 0 auto;
    }
  }

  .page-header {
    padding-top: 5em;
  }

  .header-wrapper {
  }

  .author {
    padding-top: 1.2em;
  }

  .page-header {
    /* height: 18rem; */
    padding-top: 2rem;
  }

  .outer-layout-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    row-gap: 2rem;

    header,
    .content,
    footer {
      grid-column: 1 / span 4;
    }
  }

  .blog-meta {
    padding-top: 0.8em;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    row-gap: 4px;

    .author,
    .date {
      grid-column: 1 / span 4;
    }
  }

  .tags {
    padding: 1em 0 2em;
  }

  .article-footer .wrapper {
    display: flex;
    justify-content: space-between;
  }
</style>
