<style>
  .article {
    /* font-size: 18px; */
    /* line-height: 23px; */
  }
  .page-header,
  .content {
    width: 100%;

    @container article (width >= 1024px) {
      width: 65ch;
      margin: 0 auto;
    }
  }

  .header-wrapper {
    /* font-size: 3.2rem; */
    font-weight: 700;
    font-family: var(--font-display);
  }

  .page-header {
    height: 18rem;
  }

  .outer-layout-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    row-gap: 2rem;

    header,
    .content,
    footer {
      grid-column: 1 / span 4;
    }
  }
</style>
