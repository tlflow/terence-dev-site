<main>
  <article class="article">
    <div class="outer-layout-grid">
      <header class="page-header">
        <div class="container">
          <div class="header-wrapper">
            <slot name="blog-header" />
          </div>
        </div>
      </header>

      <div class="content">
        <div class="container">
          <slot />
        </div>
      </div>

      <footer>
        <div class="container">
          <a href="#">contact</a>
          <a href="#">share</a>
        </div>
      </footer>
    </div>
