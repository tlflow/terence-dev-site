---
import "../styles/main.css";
import "../styles/button.css";
import "../styles/button.css";
import "../styles/animation.css";

import SiteFooter from "../partials/SiteFooter.astro";
import SocialBtns from "../components/SocialButtons.astro";
import ContactBtns from "../components/ContactButtons.astro";
import SVGClose from "../partials/svgs/close.astro";

// import ColorPicker from "../components/ColorPicker.vue";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Saira:wght@200..900&family=Inter:wght@200..900&display=swap"
      rel="stylesheet"
    />

    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <!-- <ColorPicker client:load /> -->

  <body id="page-body" data-main-menu="">
    <div class="page-wrapper">
      <div class="page-content">
        <slot />
        <SiteFooter />
      </div>
      <div id="main_menu" class="site-navigation" data-status="">
        <div class="container">
          <div class="outer-layout-grid">
            <div class="nav-section">
              <div class="nav-controller">
                <h2>Site Navigation</h2>
                <a id="close_menu_btn" class="close-btn" href="#">
                  <div class="icon">
                    <SVGClose />
                  </div>
                  close
                </a>
              </div>
            </div>
            <div class="nav-section">
              <h3>Home</h3>
              <ul>
                <li>
                  <a class="link" href="/index.html#about">Expertise</a>
                </li>
                <li><a class="link" href="/index.html#about">About</a></li>
              </ul>
            </div>
            <div class="nav-section">
              <h3>Blog</h3>
              <a class="link" href="/blog">Blog Index</a>

              <h4>Categories</h4>
              <div class="tag-wrapper">
                <a class="link" href="#">Category One</a>
                <a class="link" href="#">Category Two</a>
                <a class="link" href="#">Category Three</a>
                <a class="link" href="#">Category Four</a>
              </div>
              <h4>Tags</h4>
              <div class="tag-wrapper">
                <a class="link" href="#">Tag One</a>
                <a class="link" href="#">Tag Two</a>
                <a class="link" href="#">Tag Three</a>
                <a class="link" href="#">Tag Four</a>
              </div>
            </div>
            <div class="nav-section">
              <div class="btns-wrapper">
                <div class="btn-wrapper">
                  <a id="panel-menu-btn" class="menu-btn btn" href="#"
                    >My Resume</a
                  >
                </div>
              </div>
              <ContactBtns />
              <SocialBtns />
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

<style>
  .page-wrapper {
    position: relative;
    top: 0;
    width: 100%;
    height: 100%;
  }

  body[data-main-menu="active"] {
    overflow: hidden;
    width: 100vw;
    height: 100vh;
    transition: filter 0.2s ease-in;

    .page-wrapper {
      overflow: hidden;
      width: 100vw;
      height: 100vh;
    }

    .page-content {
      filter: blur(4px) brightness(50%);
      transition: filter 0.2s ease-in;
    }
  }

  .site-navigation {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-primary);
    container-name: sitenav;
    container-type: inline-size;
    z-index: -1;
    opacity: 0;
    transition: all 0.2s ease-in;

    .container {
      @container sitenav (width > 768px) {
        padding: 0 4rem;
      }
    }

    .close-btn {
      color: var(--color-secondary);
    }

    &[data-status="active"] {
      z-index: 100;
      opacity: 1;
      transition: all 0.2s ease-in;
    }

    h2 {
      font-size: 1.2rem;
    }

    &.js--menu-is-active {
    }

    .outer-layout-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      row-gap: 2rem;
      margin-top: 2em;

      @container sitenav (width > 800px) {
        max-width: 1142px;
        margin: 0 auto;
      }
    }

    .nav-section {
      grid-column: 1 / span 4;
    }

    .nav-controller {
      display: flex;
      justify-content: space-between;
    }
  }

  .tag-wrapper {
    display: flex;
    gap: 1rem;
  }
</style>
