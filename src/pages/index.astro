---
import ColorPicker from "../components/ColorPicker.vue";
import HeaderPanel from "../partials/HeaderPanel.astro";
import SiteFooter from "../partials/SiteFooter.astro";
import MyExperience from "../partials/Experience.astro";
import MyExperiments from "../partials/Experiments.astro";
import About from "../partials/HomeAbout.astro";
import MyExpertise from "../partials/Expertise.astro";
import MobileMenu from "../components/MobileMenu.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Terence Flowers: Designer Developer">
  <!-- <ColorPicker client:load /> -->
  <div class="page-wrapper">
    <div class="page-content">
      <main>
        <article>
          <div class="article-wrapper">
            <HeaderPanel />

            <section class="expertise">
              <div class="container">
                <div class="content-wrapper">
                  <MyExpertise />
                </div>
              </div>
            </section>

            <section class="experience">
              <div class="container">
                <div class="content-wrapper">
                  <MyExperience />
                </div>
              </div>
            </section>

            <section class="experiments">
              <div class="container">
                <div class="content-wrapper">
                  <MyExperiments />
                </div>
              </div>
            </section>

            <section class="about">
              <div class="container">
                <div class="content-wrapper">
                  <About />
                </div>
              </div>
            </section>
          </div>
        </article>
      </main>
      <footer>
        <div class="container">
          <SiteFooter />
        </div>
      </footer>
    </div>
    <!-- <MobileMenu /> -->
  </div>
</Layout>

<script>
  import scrollTo from "../js/utils/scrollTo";
  import AnimationEffects from "../js/utils/animate";

  AnimationEffects();
  scrollTo();
</script>

<style is:global>
  body,
  html {
    /* overflow-x: hidden; */
    /* width: 100vw; */
    /* height: 100%; */
  }

  body {
    &.js--menu-is-active {
      overflow: hidden;
      width: 100vw;
      height: 100vh;
      transition: filter 0.2s ease-in;

      .page-wrapper {
        overflow: hidden;
        width: 100vw;
        height: 100vh;
      }

      .page-content {
        filter: blur(4px) brightness(50%);
        transition: filter 0.2s ease-in;
      }
    }
  }

  main {
    padding-bottom: 4em;
  }
  .article-wrapper,
  .footer {
    container-type: inline-size;
  }

  .page-wrapper {
    position: relative;
    top: 0;
    width: 100%;
    height: 100%;
  }

  .article-wrapper {
    container-name: article;
    width: 100%;
    height: 100%;
  }

  .container {
    padding: 0 1rem;
  }

  .content-wrapper {
    padding: 2rem 0;
  }

  section.expertise {
    background: linear-gradient(
      var(--color-primary-darkest),
      var(--color-primary)
    );
  }

  section.about {
    padding-top: 4rem;
  }

  .section-header {
    grid-column: 1 / span 4;
    text-align: center;
    margin-bottom: 1em;

    h2 {
      padding-top: 2rem;
    }

    @container article (width > 768px) {
      grid-column: 1 / span 12;
    }
  }

  h2 {
    font-size: 2.2rem;
    line-height: 1.2;
    color: var(--color-accent);
    margin-bottom: 0.4em;
    font-weight: 600;
    font-family: var(--font-display);

    @container article (width > 40em) {
      font-size: 2.5rem;
    }

    @container article (width > 110em ) {
      font-size: 4.6rem;
    }
  }
  .big {
    color: color-mix(in srgb, var(--color-accent), #000 5%);
    margin-bottom: 0.8em;
    font-size: 1.5rem;
    font-weight: 300;
    line-height: 1.2;

    @container article (width > 1800px) {
      font-size: 2.4rem;
    }
  }

  p {
    color: color-mix(in srgb, var(--color-accent), #fff 40%);
    line-height: 2.15rem;
    font-size: 1.2rem;
    margin-bottom: 0.6em;

    @container article (width > 1800px) {
      font-size: 1.4rem;
    }
  }

  .wrapper {
    max-width: 1200px;
    margin: 0 auto;

    @container article (width > 1800px) {
      max-width: 1550px;
    }
  }
</style>
