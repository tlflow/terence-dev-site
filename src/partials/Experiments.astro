---
import { getCollection } from "astro:content";

const publishedPosts = await getCollection("experiments", ({ data }) => {
  return data.draft !== false && data.pubDate < new Date();
});
---

<div class="outer-layout-grid">
  <h2 id="experiments" class="section-heading">My Experiments</h2>
  <p class="section-description">
    Some fun stuff I've been tinkering with lately
  </p>
  <div class="card-layout-grid">
    {
      publishedPosts.map((post) => (
        <div class="card">
          <h3 class="h4">{post.data.title}</h3>
          <p class="description">{post.data.description}</p>
          <a class="card-link" href={`/blog/${post.slug}`}>
            See Experiment
          </a>
        </div>
      ))
    }
  </div>
  <div class="see-more">
    <a href="#" class="btn">see more</a>
  </div>
</div>

<style>
  .outer-layout-grid {
    container-type: inline-size;
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(4, 1fr);

    @container article (width > 768px) {
      grid-template-columns: repeat(12, 1fr);
    }
  }

  .section-heading,
  .section-description,
  .card-layout-grid,
  .see-more {
    grid-column: 1 / span 4;
  }

  .see-more {
    text-align: center;
    grid-column: 1 / span 4;

    @container article (width > 768px) {
      grid-column: 1 / span 12;
    }
  }

  .section-content {
    grid-column: 1 / span 4;

    @container article (width > 768px) {
      grid-column: 3 / span 8;
    }
  }

  .card-layout-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(30ch, 1fr));
    gap: 1rem;
    margin: 0 auto;
    padding-bottom: 1em;
  }

  .card {
    border-radius: var(--panel-border-radius);
    background-color: var(--color-primary-darker);
    padding: var(--panel-padding);
  }

  .card h3 {
    /* font-size: 1.4rem; */
    margin-bottom: 0.8em;
  }
  .card p {
    line-height: 1.3;
    margin-bottom: 0.5rem;
  }

  .card-link {
    font-size: 0.8rem;
  }
</style>
