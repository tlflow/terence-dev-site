<style>
  .outer-layout-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    row-gap: 1em;

    @container article (width >= 1024px) {
      grid-template-columns: repeat(12, 1fr);
    }
  }

  .section-content {
    grid-column: 1 / span 4;

    @container article (width >= 1024px) {
      grid-column: 2 / span 10;
    }
    /* @container article (width >= 1024px) {
      grid-column: 3 / span 8;
    } */
  }

  .panel {
    background-color: var(--color-primary-darker);
    border-radius: var(--panel-border-radius);
    padding: var(--panel-padding);
  }

  h3 {
    font-weight: 600;
    font-size: 1rem;
    margin-bottom: 0.4em;
    line-height: 1.3;

    @container article (width > 768px) {
      font-size: 1.4rem;
    }
  }

  .timeframe-label {
    margin-bottom: 0.6em;
    line-height: 1;
    font-size: 0.8rem;
    font-weight: 300;

    @container article (width > 768px) {
      font-size: 1rem;
      margin-bottom: 0;
    }
  }

  p {
    font-size: 1rem;
    line-height: 1;
  }

  ul {
    padding-top: 1.6em;

    @container article (width > 768px) {
      margin-left: 1rem;
    }
  }
  ul li {
    margin-left: 1rem;
    padding-bottom: 1em;

    &:last-child {
      padding-bottom: 3em;
    }
  }

  .descr {
    --timeline-color: color-mix(
      in srgb,
      var(--color-primary-darkest),
      #fff 15%
    );

    position: relative;
    margin-left: 0.625rem;

    &::before,
    &::after {
      display: block;
    }

    &::before {
      position: absolute;
      content: "";
      border-radius: 50em;
      height: 13px;
      width: 13px;
      background-color: var(--timeline-color);
      top: 0.8rem;
    }

    &:last-child&::after {
      position: absolute;
      content: "";
      border-radius: 50em;
      height: 2px;
      width: 13px;
      background-color: var(--timeline-color);
      bottom: -1.4rem;
    }

    .inner {
      position: relative;
      padding-left: 2rem;
      font-size: 0.9rem;
      line-height: 1.5;

      &::before {
        content: "";
        width: 0;
        height: 100%;
        position: absolute;
        background-color: var(--timeline-color);
        border: 0.4px dotted var(--timeline-color);
        bottom: 0;
        left: 6px;
        top: 1.4rem;
      }

      @container article (width >= 1024px) {
        font-size: 1rem;
      }
      @container article (width >= 1440px) {
        font-size: 1.3nnrem;
      }
    }
  }

  .descr:last-child li:last-child {
    padding-bottom: 0;
  }
</style>
