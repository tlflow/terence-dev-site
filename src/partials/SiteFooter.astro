---
import SocialBtns from '../components/SocialButtons.astro'
import ContactBtns from '../components/ContactButtons.astro'
---

<footer class="page-footer">
	<div class="container">
		<div class="panel">
			<div class="panel-wrapper">
				<div class="outer-layout-grid">
					<div class="footer-heading">
						<h2 class="heading">Have a question, an idea, or just want to get in touch?</h2>
					</div>
					<div class="footer-btns">
						<ContactBtns class="footer" />
						<SocialBtns class="footer" />
					</div>
				</div>
			</div>
		</div>
		<div class="rights">
			<div>&copy; 2024 Terence Flowers. All rights reserved.</div>
			<div>
				This is site is a labor of love created using
				<a
					href="https://astro.build/"
					class="link"
					target="_blank"
					>Astro</a
				> and
				<a
					href="https://www.netlify.com/"
					class="link"
					target="_blank"
					>Netlify</a
				>.
			</div>
		</div>
	</div>
</footer>

<style>
	.page-footer {
		container-type: inline-size;
		container-name: footer;
	}
	.panel {
		background-color: var(--color-primary-darker);
		border-radius: var(--panel-border-radius);
	}

	.panel-wrapper {
		padding: var(--panel-padding);
		width: 100%;
		height: 100%;
	}

	.outer-layout-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
	}

	.footer-heading,
	.footer-btns {
		grid-column: 1 / span 4;
	}

	.footer-heading h2.heading {
		color: var(--color-accent);
		/* font-size: 2.4rem; */
		font-weight: 400;
		line-height: 1.4;
		margin-top: 0;
		margin-bottom: var(--spc-lg);
	}

	.footer-btns {
		display: grid;
		align-self: end;
		gap: 1em;

		@container footer (width >= 820px) {
			grid-template-columns: repeat(2, 1fr);
			/* background: orange; */
		}
	}

	.rights {
		display: flex;
		justify-content: space-between;
		font-size: 1.6rem;
		padding-block: 1rem;
		margin-bottom: 2rem;
	}
</style>
