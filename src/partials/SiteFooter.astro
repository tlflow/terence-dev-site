---
import SVGLinkedIn from "../partials/svgs/linkedin.astro";
import SVGTwitter from "../partials/svgs/twitter.astro";
import SVGInstagram from "../partials/svgs/instagram.astro";
---

<footer class="panel">
  <div class="panel-wrapper">
    <div class="outer-layout-grid">
      <div class="footer-heading">
        <h2 class="heading">Have a question or just want to get in touch ?</h2>
      </div>
      <div class="footer-btns">
        <div class="contact-btns">
          <div class="btn-wrapper">
            <a
              class="btn email"
              href="mailto:terenceflowers.ux@gmail.com"
              target="_blank">
              terenceflowers.ux@gmail.com
            </a>
            <a class="btn phone" href="tel:234-567-8900"> + 1 234.567.8900</a>
          </div>
        </div>
        <div class="social-btns">
          <div class="btn-wrapper">
            <a href="#" class="btn">
              <div class="icon">
                <SVGLinkedIn />
              </div>
            </a>

            <a href="#" class="btn">
              <div class="icon">
                <SVGTwitter />
              </div>
            </a>

            <a href="#" class="btn">
              <div class="icon">
                <SVGInstagram />
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .panel {
    container-type: inline-size;
    container-name: footer;
    background-color: var(--color-primary-darker);
    border-radius: var(--panel-border-radius);
    margin-bottom: 2rem;
  }

  .panel-wrapper {
    padding: var(--panel-padding);
    width: 100%;
    height: 100%;
  }

  .outer-layout-grid {
    display: grid;
    grid-template-rows: 1fr 1fr;

    @container footer (width > 350px) {
      min-height: 18em;
    }
    @container footer (width > 1024px) {
      min-height: 14em;
    }
  }

  .fotoer-heading h2.heading {
    font-size: 2rem;
    color: var(--color-accent);
    margin: 0;

    @container footer (width > 350px) {
      font-size: 3rem;
    }
  }

  .email.btn,
  .phone.btn {
    border: none;
    font-size: 1rem;
  }
  .email.btn {
    font-size: 0.8rem;

    @container (width > 450px) {
      font-size: 1rem;
    }
  }

  .footer-btns {
    align-self: end;

    display: grid;
    gap: 1em;

    @container footer (width >= 820px) {
      grid-template-columns: repeat(2, 1fr);
      /* background: orange; */
    }
  }

  .contact-btns {
    .btn-wrapper {
      display: grid;
      gap: 1em;
      justify-items: start;
    }

    @container footer (width > 768px) {
      .btn-wrapper {
        justify-items: start;
      }
    }
  }

  .social-btns {
    /* background: red; */

    @container footer (width >= 800px) {
      justify-self: end;
      align-self: end;
    }
  }

  .social-btns .btn {
    border: none;
    border-radius: 1rem;
    padding: 0.7rem;

    .btn .icon {
      --icon-size: 2.4rem;

      @container article (width > 800px) {
        --icon-size: 3rem;
      }
    }
  }
</style>
